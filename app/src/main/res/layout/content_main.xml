<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.twl.stepperlibrary.internal.widget.TabsContainer
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_activeTabColor="#248cff"
        app:ms_activeTabNumColor="@android:color/white"
        app:ms_inactiveTabColor="#eeeeee"
        app:ms_inactiveTabNumColor="#dddddd"/>

    <Button
        android:id="@+id/proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="proceed"/>

    <Button
        android:id="@+id/onPrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onPrevious"/>

    <com.twl.stepperlibrary.StepperTabViewPage
        android:id="@+id/stepperLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:ms_stepperType="tabs"
        app:ms_showErrorStateEnabled="true"/>
</LinearLayout>